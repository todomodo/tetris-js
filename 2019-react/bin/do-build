#!/bin/bash
#
# Usage:
#   bin/do-build
#   bin/do-build --no-cache
#
# Prerequisites:
#   $cat ~/.bashrc | grep HOST
#     export HOST_UID=$(id -u)
#     export HOST_GID=$(id -g)
#
docker image build \
  --build-arg HOST_UID=$HOST_UID \
  --build-arg HOST_GID=$HOST_GID \
  $1 \
  --tag=tetjs-rapidant .